<Window x:Class="_08_HTTP_task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_HTTP_task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Enter url:" Margin="0,0,0,5"/>
        <TextBox Name="urlTextBox" Height="25" Margin="0,0,0,10"/>

        <Button Content="Choose downloading location" Click="ChoosePathBtn" Margin="0,0,0,5"/>
        <Button Content="Download" Click="Button_Click" Margin="0,0,0,10"/>

        <ProgressBar Name="progressbar" Height="20" Margin="0,0,0,10"/>

        <ListBox Name="list" Height="120"/>
    </StackPanel>
</Window>
